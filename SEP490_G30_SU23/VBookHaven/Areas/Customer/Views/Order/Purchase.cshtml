@using VBookHaven.Areas.Customer.Controllers
@using VBookHaven.Models

@model OrderPurchaseModel

@{
	double total = 0;
	foreach (CartDetail item in Model.Cart)
	{
		var p = item.Product;
		total += (int)p.RetailPrice * (1 - (double)p.RetailDiscount / 100) * (int)item.Quantity;
	}

	string address = "Chưa có địa chỉ giao hàng";
	if (Model.Address.ShipInfoId != 0)
	{
		var shipInfo = Model.Address;
		address = shipInfo.CustomerName + ", " + shipInfo.Phone + ", " + shipInfo.ShipAddress;
	}
}

<style>
	table, th, td {
		border: 1px solid;
	}

	th, td {
		margin: 10px;
	}

	table {
		margin: 50px;
		border-collapse: collapse;
	}
</style>

<h1>Chi tiết đơn hàng</h1>
<table style="border: 1px solid; border-collapse: collapse; margin: 50px">
	<tr>
		<th>Sản phẩm</th>
		<th>Số lượng</th>
		<th>Giá thành</th>
		<th>Giảm giá</th>
		<th>Thành tiền</th>
	</tr>
	@foreach (CartDetail o in Model.Cart)
	{
		<tr>
			<td>@o.Product.Name</td>
			<td>@o.Quantity</td>
			<td>@o.Product.RetailPrice</td>
			<td>@o.Product.RetailDiscount%</td>
			<td>@(o.Product.RetailPrice * (1 - o.Product.RetailDiscount / 100) * o.Quantity)</td>
		</tr>
	}
</table>
<div style="font-weight: bold">Tổng cộng: @total</div>

<h1>Địa chỉ giao hàng</h1>
<div>@address</div>
<form action="ChangeAddress" method="post">
	<input hidden name="shipInfoId" value="@Model.AddressId" />
	<input type="submit" value="Thay đổi" class="btn btn-secondary" />
</form>

<br /><br /><br />

@if (Model.AddressId != 0)
{
	<form action="PurchaseFinalize" method="post">
		<input hidden name="shipInfoId" value="@Model.AddressId" />
		<input type="submit" class="btn btn-primary" style="font: 20px; font-weight: bold"
			value="Thanh toán"/>
	</form>
}
else
{
	<div class="text-danger">Chưa chọn địa chỉ giao hàng</div>
	<button class="btn btn-primary" style="font: 20px; font-weight: bold" disabled>Thanh toán</button>
}
