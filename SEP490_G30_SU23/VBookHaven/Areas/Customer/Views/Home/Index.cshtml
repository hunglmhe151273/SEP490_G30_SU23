                                @foreach (Product p in Model.NewProducts)
                                {
                                    int id = p.ProductId;
                                    <!-- product-item start -->
                                    <div class="col-lg-3 col-md-4">
                                        <div class="product-item">
                                            <div class="product-img">
                                                <a href="/customer/product/detail/@id">
                                                    @if (Model.ProductsThumbnails[id] != null)
                                                    {
                                                        <img src="@imageRoot/images/img/@Model.ProductsThumbnails[id]" alt="" />
                                                    }
                                                    else
