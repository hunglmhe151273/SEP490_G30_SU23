@using VBookHaven;
@using VBookHaven.Areas.Customer.Controllers;
@using VBookHaven.Models;
@model HomeViewModel;

@{
    ViewData["Title"] = "Index";
    string imageRoot = Config.ImageRoot;
}

<!-- Start page content -->
<section id="page-content" class="page-wrapper section">

    <!-- POPULAR SECTION START-->
    <div class="by-brand-section mb-80">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title text-start mb-40">
                        <h2 class="uppercase">Sản phẩm bán chạy</h2>
                        @*<h6>There are many variations of passages of brands available,</h6>*@
                    </div>
                    <div class="featured-product">
                        <div class="active-featured-product slick-arrow-2">
                            @foreach (Product p in Model.FamousProducts)
                            {
                                int id = p.ProductId;
                                <!-- product-item start -->
                                <div class="col-lg-3 col-md-4">
                                    <div class="product-item">
                                        <div class="product-img">
                                            <a href="/customer/product/detail/@id">
                                                @if (Model.ProductsThumbnails[id] != null)
                                                {
                                                    <img src="@imageRoot/images/img/@Model.ProductsThumbnails[id]" alt="" />
                                                }
                                                else
                                                {
                                                    <img src="~/images/default_image.png" alt="" />
                                                }
                                            </a>
                                        </div>
                                        <div class="product-info">
                                            <h6 class="product-title">
                                                <a href="/customer/product/detail/@id">@p.Name </a>
                                            </h6>
                                            @*<div class="pro-rating">
                                        <a href="#"><i class="zmdi zmdi-star"></i></a>
                                        <a href="#"><i class="zmdi zmdi-star"></i></a>
                                        <a href="#"><i class="zmdi zmdi-star"></i></a>
                                        <a href="#"><i class="zmdi zmdi-star-half"></i></a>
                                        <a href="#"><i class="zmdi zmdi-star-outline"></i></a>
                                        </div>*@
                                            @if (p.RetailDiscount != 0)
                                            {
                                                <h5 class="pro-price" style="margin-bottom: 10px; color: #bbbbbb"><s>@p.RetailPrice VNĐ</s></h5>
                                                <h3 class="pro-price">@(p.RetailPrice * (100 - p.RetailDiscount) / 100) VNĐ</h3>
                                            }
                                            else
                                            {
                                                <h5 class="pro-price" style="margin-bottom: 0px;">&nbsp;</h5>
                                                <h3 class="pro-price" style="margin-bottom: 30px;">@p.RetailPrice VNĐ</h3>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <!-- product-item end -->
                            }
                        </div>
                    </div>    
                </div>
            </div>
        </div>
    </div>
    <!-- POPULAR SECTION END -->

    <!-- DISCOUNT SECTION START -->
    <div class="featured-product-section mb-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title text-start mb-40">
                        <h2 class="uppercase">Giảm giá ưu đãi</h2>
                        @*<h6>There are many variations of passages of brands available,</h6>*@
                    </div>
                    <div class="featured-product">
