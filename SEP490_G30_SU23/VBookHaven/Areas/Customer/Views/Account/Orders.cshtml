            </li>
        </ul>
    </div>
</div>
<div class="my-4">
    <form action="">
        <div class="input-group">
            <input type="text" class="form-control border-secondary mb-0" value="" placeholder="Tìm đơn hàng theo tên sản phẩm, mã sản phẩm">
            <button class="btn btn-outline-secondary" id="btn-search" type="submit">Tìm kiếm</button>
        </div>
    </form>
</div>
<div class="tab-content">
    <div class="tab-pane fade active show" id="All">
        @foreach (var order in Model.AllOrders)
        {
            int total = 0;

            <div class="card info bg-light p-0 my-4">
                <div class="card-body">
                    <div class="w-100 py-3">
                        <div class="d-flex justify-content-between border-bottom p-3 pt-0">
                            <span>#@order.OrderId</span>
                            <span>
                                @switch (order.Status)
                                {
                                    case OrderStatus.Wait:
                                        @:Chờ nhân viên xác nhận
                                        break;
                                    case OrderStatus.Process:
                                        @:Đang xử lí đơn hàng
                                        break;
                                    case OrderStatus.Shipping:
                                        @:Đang vận chuyển hàng
                                        break;
                                    case OrderStatus.Shipped:
                                        @:Giao hàng thành công
                                        break;
                                    case OrderStatus.Done:
                                        @:Giao hàng thành công
                                        break;
                                    case OrderStatus.Cancel:
                                        @:Đơn hàng đã bị hủy
                                        break;
                                }
                            </span>
                        </div>
                        @foreach (var detail in Model.OrderDetails.Where(o => o.OrderId == order.OrderId))
                        {
                            var product = detail.Product;
                            <div class="order-items">
                                <div class="item-img">
                                    @if (Model.Thumbnails[product.ProductId] == null)
                                    {
                                        <img src="~/images/default_image.png" alt="">
                                    }
                                    else
                                    {
                                        <img src="@imageRoot/images/img/@Model.Thumbnails[product.ProductId]" alt="">
                                    }
                                </div>
                                <div class="item-info">
                                    <p class="item-info-name">@product.Name</p>
                                    <p class="item-info-price"><b>Giá:</b> @detail.UnitPrice.Value.ToString("#,0") VNĐ</p>
                                    <p class="item-info-price"><b>Chiết khấu:</b> @detail.Discount.Value.ToString("#,0")%</p>
                                    <p class="item-info-quantity"><b>Số lượng:</b> @detail.Quantity.Value.ToString("#,0")</p>
                                </div>
                                @{
                                    int itemTotal = (int)(detail.UnitPrice.Value * (1 - detail.Discount.Value / 100) * detail.Quantity.Value);
                                    total += itemTotal;
                                    <div class="item-total"><b>@itemTotal.ToString("#,0") VNĐ</b></div>
                                }
                            </div>
                        }
                        <div class="mt-3 d-flex justify-content-end">
                            <div class="order-footer">
                                <p class="text-end">Tổng tiền: @total.ToString("#,0") VNĐ</p>
                                <div>
                                    <button class="btn btn-outline-primary"
                                        onclick="window.location.href='/Customer/Account/OrderDetail/@order.OrderId'">
                                        Xem chi tiết
                                    </button>
                                    @if (order.Status.Equals(OrderStatus.Wait))
                                    {
                                        <button class="btn btn-outline-danger" 
                                            onclick="document.getElementById('cancel-order-form').submit()">
                                            Hủy đơn
                                        </button>
                                    }
                                    <form hidden id="cancel-order-form" action="/Customer/Account/CancelOrderFromList" 
                                          method="post">
                                        <input name="id" value="@order.OrderId" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
