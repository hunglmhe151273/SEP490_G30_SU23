@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="wrapper">
    <div class="section-authentication-register d-flex align-items-center justify-content-center">
        <div class="row">
            <div class="col-12 col-lg-10 mx-auto">
                <div class="card radius-15 overflow-hidden">
                    <div class="row g-0">
                        <div class="col-xl-6">
                            <div class="card-body p-md-5">
                                <div class="text-center">
                                    <img src="~/mgmt-lib/images/logo-icon.png" width="80" alt="">
                                    <h3 class="mt-4 font-weight-bold">Register an Account</h3>
                                </div>
                                <div class="">
                                    <!-- <div class="d-grid">
                                        <a class="btn my-4 shadow-sm btn-white" href="javascript:;"> <span class="d-flex justify-content-center align-items-center">
                                        <img class="me-2" src="~/mgmt-lib/images/icons/search.svg" width="16" alt="Image Description">
                                        <span>Sign Up with Google</span>
                                            </span>
                                        </a> <a href="javascript:;" class="btn btn-facebook"><i class="bx bxl-facebook me-1"></i>Sign Up with Facebook</a>
                                    </div> -->
                                    <div class="login-separater text-center mb-4">
                                        <span>SIGN UP WITH EMAIL</span>
                                        <hr>
                                    </div>
                                    <div class="form-body">
                                        <form enctype="multipart/form-data" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row g-3">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="col-12">
                                                <label asp-for="Input.Email" for="inputEmailAddress" class="form-label"></label>
                                                <input asp-for="Input.Email" type="email" class="form-control" id="inputEmailAddress" placeholder="Example@gmail.com">
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="Input.Password" for="inputChoosePassword" class="form-label"></label>
                                                <div class="input-group" id="show_hide_password">
                                                    <input asp-for="Input.Password" type="password" class="form-control border-end-0" id="inputChoosePassword" placeholder="Nhập mật khẩu">
                                                    <a href="javascript:;" class="input-group-text bg-transparent"><i class="bx bx-hide"></i></a>
                                                </div>
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="Input.ConfirmPassword" for="inputChoosePassword" class="form-label"></label>
                                                <div class="input-group" id="show_hide_password">
                                                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control border-end-0" id="inputChoosePassword" placeholder="Xác nhận lại mật khẩu">
                                                    <a href="javascript:;" class="input-group-text bg-transparent"><i class="bx bx-hide"></i></a>
                                                </div>
                                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                            </div>
                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-primary"><i class="bx bx-user me-1"></i>Sign up</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col-xl-6 bg-login-color d-flex align-items-center justify-content-center">
                            <img src="~/mgmt-lib/images/login-images/register-frent-img.jpg" class="img-fluid" alt="...">
                        </div>
                    </div>
                    <!--end row-->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}