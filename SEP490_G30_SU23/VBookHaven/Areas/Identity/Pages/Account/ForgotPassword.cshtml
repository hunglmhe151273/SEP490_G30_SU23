@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<!-- wrapper -->
    <div class="wrapper">
        <div class="authentication-reset-password d-flex align-items-center justify-content-center">
            <div class="row">
                <div class="col-12 col-lg-10 mx-auto">
                    <div class="card radius-15">
                        <div class="row g-0">
                            <div class="col-lg-5">
                                <div class="card-body p-md-5">
                                    <div class="text-left">
                                    <h1><img src="~/mgmt-lib/images/logo-icon.png" width="60" alt="">VBookHaven</h1>
                                    </div>
                                    <h4 class="mt-5 font-weight-bold">Lấy lại mật khẩu</h4>
                                    <p class="text-muted">Hãy nhập địa chỉ mail của bạn để lấy lại mật khẩu</p>
                                    <form method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="mb-3 mt-5">
                                            <label asp-for="Input.Email" class="form-label"></label>
                                            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Nhập mail tại đây" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="d-grid gap-2">
                                            <button type="submit" class="btn btn-primary">Gửi</button>
                                            <a asp-page="./Login" class="btn btn-light"><i class='bx bx-arrow-back mr-1'></i>Trở về đăng nhập</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <img src="~/mgmt-lib/images/login-images/forgot-password-frent-img.jpg" class="card-img login-img h-100" alt="...">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end wrapper -->



