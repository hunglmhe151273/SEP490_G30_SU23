@model ProfileVM
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_LayoutProduct.cshtml";
}
@inject UserManager<IdentityUser> UserManager
<!--page-wrapper-->
<div class="page-wrapper">
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" enctype="multipart/form-data" asp-controller="User" asp-action="Profile" asp-area="Admin" asp-route-returnUrl="/admin/home/index" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="@Model.StaffProfileVM.ApplicationUser.Id" hidden/>
            <input asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.Image" hidden />
                <div class="form-floating">
                <input asp-for="@Model.StaffProfileVM.ApplicationUser.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.StaffProfileVM.ApplicationUser.Email"></label>
                <span asp-validation-for="@Model.StaffProfileVM.ApplicationUser.Email" class="text-danger"></span>
                </div>
               
                <div class="form-floating mb-3 col-md-6">
                <input asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.FullName" class="form-control"/>
                    <label asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.FullName" class="ms-2 text-muted"></label>
                    <span asp-validation-for="@Model.StaffProfileVM.ApplicationUser.Staff.FullName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.Address" class="form-control" placeholder="" />
                    <label asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.Address" class="ms-2 text-muted"></label>
                    <span asp-validation-for="@Model.StaffProfileVM.ApplicationUser.Staff.Address" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.Dob" class="form-control" placeholder="" />
                    <label asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.Dob" class="ms-2 text-muted"></label>
                    <span asp-validation-for="@Model.StaffProfileVM.ApplicationUser.Staff.Dob" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.IdCard" class="form-control"/>
                    <label asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.IdCard" class="ms-2 text-muted"></label>
                    <span asp-validation-for="@Model.StaffProfileVM.ApplicationUser.Staff.IdCard" class="text-danger"></span>
                </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.Phone" placeholder="" />
                <label asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.Phone" class="ms-2 text-muted"></label>
                <span asp-validation-for="@Model.StaffProfileVM.ApplicationUser.Staff.Phone" class="text-danger"></span>
            </div>
                <div class="form-floating mb-3 col-md-6">
                <img src="@Model.StaffProfileVM.ApplicationUser.Staff.Image" width="100%"
                     style="border-radius:5px; border:1px solid #bbb9b9" />
                    <input asp-for="@Model.StaffProfileVM.Staff_ImageFile" class="form-control" placeholder="" />
                    <label asp-for="@Model.StaffProfileVM.Staff_ImageFile" class="ms-2 text-muted"></label>
                </div>
           
                <label asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.IsMale" class="ms-2 text-muted"></label>
                <div class="form-check">
                    <input type="radio" asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.IsMale" value="true" class="form-check-input" />
                    <label class="form-check-label">Nam</label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="@Model.StaffProfileVM.ApplicationUser.Staff.IsMale" value="false" class="form-check-input" />
                    <label class="form-check-label">Nữ</label>
                </div>
                <span asp-validation-for="@Model.StaffProfileVM.ApplicationUser.Staff.IsMale" class="text-danger"></span>
             
                    @if (User.IsInRole(SD.Role_Customer))
                    {
                        <input disabled value="@SD.Role_Customer" class="form-control" />
                    }
                    else if (User.IsInRole(SD.Role_Owner))
                    {
                        <input disabled value="@SD.Role_Owner" class="form-control" />
                    }
                    else if (User.IsInRole(SD.Role_Storekeeper))
                    {
                        <input disabled value="@SD.Role_Storekeeper" class="form-control" />
                    }
                    else if (User.IsInRole(SD.Role_Seller))
                    {
                    <input disabled value="@SD.Role_Seller" class="form-control" />
                    }
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Lưu thông tin cá nhân</button>
        </form>
        <hr />
        <form id="registerForm" enctype="multipart/form-data" asp-controller="User" asp-action="ChangePassword" asp-area="Admin" asp-route-returnUrl="/admin/home/index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.ChangePwdVM.CurrentPwd" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.ChangePwdVM.CurrentPwd"></label>
                <span asp-validation-for="@Model.ChangePwdVM.CurrentPwd" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.ChangePwdVM.NewPwd" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.ChangePwdVM.NewPwd"></label>
                <span asp-validation-for="@Model.ChangePwdVM.NewPwd" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.ChangePwdVM.ConfirmNewPwd" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.ChangePwdVM.ConfirmNewPwd"></label>
                <span asp-validation-for="@Model.ChangePwdVM.ConfirmNewPwd" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Lưu thay đổi</button>
        </form>
        </div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
