
@{
    ViewData["Title"] = "ResetPassword";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<title>Syndash - Bootstrap4 Admin Template</title>
	<!--favicon-->
	<link rel="icon" href="~/mgmt-lib/images/favicon-32x32.png" type="image/png" />
	<!-- loader-->
	<link href="~/mgmt-lib/css/pace.min.css" rel="stylesheet" />
	<script src="~/mgmt-lib/js/pace.min.js"></script>
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="~/mgmt-lib/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&family=Roboto&display=swap" />
	<!-- Icons CSS -->
	<link rel="stylesheet" href="~/mgmt-lib/css/icons.css" />
	<!-- App CSS -->
	<link rel="stylesheet" href="~/mgmt-lib/css/app.css" />
</head>

<body class="bg-forgot">
	<!-- wrapper -->
	<div class="wrapper">
		<div class="authentication-forgot d-flex align-items-center justify-content-center">
			<div class="card shadow-lg forgot-box">
				<div class="card-body p-md-5">
					<div class="text-center">
						<img src="~/mgmt-lib/images/icons/forgot-2.png" width="140" alt="" />
					</div>
					<h4 class="mt-5 font-weight-bold">Forgot Password?</h4>
					<p class="text-muted">Enter your registered email ID to reset the password</p>
					<form asp-area="admin" asp-action="ResetPassword" asp-controller="account" method="post">
					<div class="mb-3 mt-4">
							<label class="form-label">Email ID</label>
							<input type="email" name="gmail" class="form-control form-control-lg radius-30" placeholder="example@user.com" />
					</div>
					<div class="d-grid gap-2">
							<button type="submit" class="btn btn-primary btn-lg radius-30">Send</button>
					</form>
					<a href="~/admin/account/Login" class="btn btn-light radius-30"><i class='bx bx-arrow-back mr-1'></i>Back to Login</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end wrapper -->
</body>

</html>

