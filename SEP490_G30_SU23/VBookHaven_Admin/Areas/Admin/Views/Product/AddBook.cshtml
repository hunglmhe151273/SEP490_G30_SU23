@model VBookHaven_Admin.Areas.Admin.Controllers.ProductManagementViewModel
@{
	ViewData["Title"] = "Thêm sách";
}

<!--page-wrapper-->
<div class="page-wrapper">
	<!--page-content-wrapper-->
	<div class="page-content-wrapper">
		<div class="page-content">
			<!--breadcrumb-->
			<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
				<div class="breadcrumb-title pe-3">Sản phẩm</div>
				<div class="ps-3">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb mb-0 p-0">
							<li class="breadcrumb-item">
								<a href="/admin/product/index"><i class="bx bx-home-alt"></i></a>
							</li>
							<li class="breadcrumb-item active" aria-current="page">Thêm sản phẩm</li>
						</ol>
					</nav>
				</div>
			</div>
			<!--end breadcrumb-->
			<form action="" method="post" enctype="multipart/form-data" class="addForm">
				@Html.AntiForgeryToken()
				<div class="row">
					<div class="col-5 mx-auto h6">
						<div class="card border-top border-0 border-4 border-primary">
							<div class="card-body p-5">
								<div class="card-title d-flex align-items-center">
									<h3 class="mb-0 text-primary">Ảnh</h3>
								</div>
								<hr>
								<input id="image-uploadify" asp-for="AddImageList" accept=".jpg, .png, image/jpeg, image/png" multiple="" style="display: inline;" />
							</div>
						</div>
					</div>
					<div class="col-7 mx-auto">
						<div class="card border-top border-0 border-4 border-primary">
							<div class="card-body p-5">
								<div class="card-title d-flex align-items-center">
									<h3 class="mb-0 text-primary">Thông tin chung</h3>
								</div>
								<hr>
								<div class="row g-3">
									<div class="col-md-4">
										<label class="form-label">Mã vạch</label>
										<input class="form-control validate is-valid" asp-for="Product.Barcode" placeholder="Để trống để tự sinh" />
										<div id="Product_Barcode-feedback" class="feedback"></div>
									</div>
									<div class="col-md-8">
										<label class="form-label">Tên sản phẩm *</label>
										<input type="text" class="form-control validate" asp-for="Product.Name" placeholder="VD: Sách a, Bút bi xyz, v.v.." />
										<div id="Product_Name-feedback" class="feedback"></div>
									</div>
									<div class="col-md-12">
										<label class="form-label">Mô tả</label>
										<textarea class="form-control" asp-for="Product.Description" placeholder="Mô tả về sản phẩm..."></textarea>
									</div>
									<div class="col-md-4">
										<label class="form-label">Đơn vị *</label>
										<input class="form-control validate" asp-for="Product.Unit" placeholder="VD: Quyển, Bộ, v.v.." />
										<div id="Product_Unit-feedback" class="feedback"></div>
									</div>
									<div class="col-md-4">
										<label class="form-label">Kích thước</label>
										<input class="form-control" asp-for="Product.Size" placeholder="VD: 30 x 40 cm" />
									</div>
									<div class="col-md-4">
										<label class="form-label">Trọng lượng</label>
										<input class="form-control" asp-for="Product.Weight" placeholder="VD: 500 g" />
									</div>
									<div class="col-md-12">
										<label class="form-label">Loại sản phẩm</label>
										<div class="input-group">
											<select class="form-control" asp-for="Product.SubCategoryId" asp-items="ViewBag.subCategories"></select>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-6 mx-auto">
						<div class="card border-top border-0 border-4 border-primary">
							<div class="card-body p-5">
								<div class="card-title d-flex align-items-center">
									<h3 class="mb-0 text-primary">Thông tin sách</h3>
								</div>
								<hr>
								<div class="row g-3">
									<div class="col-md-6">
										<label class="form-label">Số trang</label>
										<div class="input-group">
											<input asp-for="Book.Pages" class="form-control" />
											<span class="input-group-text">Trang</span>
										</div>
									</div>
									<div class="col-md-6">
										<label class="form-label">Ngôn ngữ</label>
										<input asp-for="Book.Language" class="form-control" placeholder="VD: Tiếng Việt, Tiếng Anh, v.v.." />
									</div>
									<div class="col-md-12">
										<label class="form-label">Tác giả</label>
										<div class="input-group">
											<select class="multiple-select" data-placeholder="Chọn tác giả..." multiple="multiple"
													asp-for="AuthorIdList" asp-items="ViewBag.authors">
											</select>
										</div>
										<div class="btn btn-outline-success w-100 mt-2" data-bs-toggle="modal"
											 data-bs-target="#addAuthor">
											<i class='bx bx-plus-circle fs-5'></i> Thêm tác giả
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-6 mx-auto">
						<div class="card border-top border-0 border-4 border-primary">
							<div class="card-body p-5">
								<div class="card-title d-flex align-items-center">
									<h3 class="mb-0 text-primary">Giá sản phẩm</h3>
								</div>
								<hr>
								<div class="row g-3">
									<div class="col-md-12 text-warning" id="warningPrice"></div>
									<div class="col-md-8">
										<label class="form-label">Giá nhập *</label>
										<div class="input-group">
											<input type="number" class="form-control validate" asp-for="Product.PurchasePrice" min="0" />
											<span class="input-group-text">VNĐ</span>
											<div id="Product_PurchasePrice-feedback" class="feedback"></div>
										</div>
									</div>
									<div class="col-md-8">
										<label class="form-label">Giá lẻ *</label>
										<div class="input-group">
											<input type="number" class="form-control validate" asp-for="Product.RetailPrice" />
											<span class="input-group-text">VNĐ</span>
											<div id="Product_RetailPrice-feedback" class="feedback"></div>
										</div>
									</div>
									<div class="col-md-4">
										<label class="form-label">Chiết khấu lẻ *</label>
										<div class="input-group">
											<input type="number" class="form-control validate" asp-for="Product.RetailDiscount" step="0.1" />
											<span class="input-group-text">%</span>
											<div id="Product_RetailDiscount-feedback" class="feedback"></div>
										</div>
									</div>
									<div class="col-md-8">
										<label class="form-label">Giá sỉ *</label>
										<div class="input-group">
											<input type="number" class="form-control validate" asp-for="Product.WholesalePrice" />
											<span class="input-group-text">VNĐ</span>
											<div id="Product_WholesalePrice-feedback" class="feedback"></div>
										</div>
									</div>
									<div class="col-md-4">
										<label class="form-label">Chiết khấu sỉ *</label>
										<div class="input-group">
											<input type="number" class="form-control validate" asp-for="Product.WholesaleDiscount" step="0.1" />
											<span class="input-group-text">%</span>
											<div id="Product_WholesaleDiscount-feedback" class="feedback"></div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-12 mx-auto">
						<div class="card border-top border-0 border-4 border-primary" style="justify-content: left;">
							<div class="card-body p-5">
								<input type="submit" class="btn btn-primary add submit" value="Lưu" />
								<input type="button" class="btn btn-secondary" value="Hủy" onclick="window.location.href='/admin/product/index'" />
							</div>
						</div>
					</div>
				</div>

				<input hidden id="Product_ProductId" value="" />

			</form>

			<div class="modal fade" id="addAuthor" tabindex="-1" aria-labelledby="exampleModalLabel"
				 aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<form action="#" class="addForm">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalLabel">
									Thêm tác giả mới
								</h5>
							</div>
							<div class="modal-body row">
								<div class="col-12 mb-3">
									<label class="form-label">Tên tác giả *</label>
									<input type="text" class="form-control validate important" id="authorName"
										   placeholder="Nhập tên tác giả">
									<div id="authorName-feedback" class="feedback"></div>
								</div>
								<div class="col-12 mb-3">
									<label class="form-label">Mô tả</label><br>
									<textarea id="authorDescription" class="form-control"
											  cols="30" rows="3" placeholder="Nhập mô tả"></textarea>
								</div>
							</div>
							<div class="modal-footer">
								<input type="button" class="btn btn-primary reset add submit" value="Lưu"
									   id="submitAuthor" data-bs-dismiss="modal">
								<input type="reset" class="btn btn-secondary reset" value="Đặt lại">
								<button type="button" class="btn btn-secondary"
										data-bs-dismiss="modal">
									Hủy
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--end page-content-wrapper-->
</div>
<!--end page-wrapper-->

@section Scripts
{
	<script src="~/js/Product.js"></script>
	<script src="~/js/ValidateProduct.js"></script>
}