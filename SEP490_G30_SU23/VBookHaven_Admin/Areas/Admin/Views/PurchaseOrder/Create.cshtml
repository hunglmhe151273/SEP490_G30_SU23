@model VBookHaven.Models.ViewModels.CreatePurchaseOrderVM
@{
    ViewData["Title"] = "Tạo đơn nhập hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .supplier-info {
        margin-top: 10px;
    }

    .close-btn {
        margin-top: 10px;
        cursor: pointer;
        color: blue;
        text-decoration: underline;
    }

    .product-info {
        display: flex;
        align-items: center;
    }

        .product-info img {
            width: 50px;
            height: 50px;
            margin-right: 10px;
        }

        .product-info .labels {
            display: flex;
            align-items: center;
            margin-top: 5px;
        }

            .product-info .labels label {
                margin-right: 10px;
            }

            .product-info .labels span {
                font-weight: bold;
            }
</style>
<!--page-wrapper-->
<div class="page-wrapper">
    <!--page-content-wrapper-->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Loại sản phẩm</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Loại</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!--end breadcrumb-->
            <div class="card radius-15">
                <div class="card-body">
                    <div class="card-title">
                        <h6 class="mb-0">Danh sách các loại</h6>
                    </div>
                    <hr />
                    <form id="orderForm" action="Create" method="Post">
                        <div class="card-body" id="supplierContainer">
                            <label for="supplierSelect" class="form-label">Select Supplier</label>
                            <select asp-for="SupplierID" class="form-control" id="supplierSelect">
                                <option value="">Select...</option>
                            </select>
                        </div>
                        <div id="supplierInfoContainer"></div>
                        <div class="card-body" id="productContainer">
                            <label for="productSelect" class="form-label">Select Product</label>
                            <select class="form-control" id="productSelect">
                                <option value="">Select product...</option>
                            </select>
                        </div>

                        <div id="orderContainer"></div>
                        <label asp-for="Note" for="inputName" class="form-label"></label>
                        <input asp-for="Note" class="form-control" id="inputName">
                        <span asp-validation-for="Note" class="text-danger"></span>
                        <label asp-for="AmountPaid" for="inputName" class="form-label"></label>
                        <input asp-for="AmountPaid" class="form-control" id="inputName">
                        <span asp-validation-for="AmountPaid" class="text-danger"></span>
                        <button type="submit" class="btn btn-primary">Place Order</button>
                    </form>


                </div>
            </div>
        </div>
    </div>
    <!--end page-content-wrapper-->
</div>
<!--end page-wrapper-->
@section Scripts {
    <script type="text/javascript" src="~/js/addPurchaseOrder.js"></script>
}
