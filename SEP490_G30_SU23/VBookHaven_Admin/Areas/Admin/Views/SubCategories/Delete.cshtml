@model VBookHaven.Models.SubCategory

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--page-wrapper-->
<div class="page-wrapper">
    <!--page-content-wrapper-->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Quản trị viên</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="javascript:;">
                                    <i class="bx bx-home-alt"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Quản lý nhóm hàng con</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!--end breadcrumb-->
            <div class="mx-auto">
                <h3 class="mb-0 text-uppercase">Quản lý nhóm hàng con</h3>
                <hr>
                <h1>Xóa</h1>
                <h3>Bạn có chắc chắn muốn xóa nhóm hàng con?</h3>
                <div>
                    <h4>Nhóm hàng con</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                           Tên nhóm
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SubCategoryName)
                        </dd>
                        <dt class="col-sm-2">
                            Nhóm cha
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Category.CategoryName)
                        </dd>
                    </dl>
                    <form asp-controller="Subcategories" asp-action="Delete" method="post">
                        <input type="hidden" asp-for="SubCategoryId" />
                        <input type="submit" value="Xóa" class="btn btn-danger" /> |
                        <a asp-controller="Categories" asp-action="Index">Trờ lại danh sách</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--end page-content-wrapper-->
</div>

<!--end page-wrapper-->