@model VBookHaven.Models.ViewModels.DashboardVM
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--page-wrapper-->
<div class="page-wrapper">
    <!--page-content-wrapper-->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="card radius-15">
                <div class="card-header border-bottom-0">
                    <div class="d-lg-flex align-items-center">
                        <div>
                            <h5 class="mb-2 mb-lg-0">Kết quả doanh thu</h5>
                        </div>
                        <div class="ms-lg-auto mb-2 mb-lg-0">
                            <div class="form-floating">
                                <select class="form-select" id="DailyReport">
                                    <option value="Hôm nay" selected>Hôm nay</option>
                                    <option value="7 ngày">Trong 7 ngày</option>
                                    <option value="30 ngày">Trong 30 ngày</option>
                                </select>
                                <label>Lọc</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-lg-3">
                            <div class="card radius-15">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="mb-0 font-35">
                                            <i class='bx bxs-dollar-circle bx-tada text-primary'></i>
                                        </div>
                                        <div>
                                            <p class="ms-auto mb-0 fs-5"> Doanh thu</p>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <h3 class="mb-0 text-primary" id="revenue"></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3">
                            <div class="card radius-15">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="mb-0 font-35">
                                            <i class='bx bxs-receipt bx-tada text-info'></i>
                                        </div>
                                        <div>
                                            <p class="ms-auto mb-0 fs-5"> Đơn hàng cần xử lý</p>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <h3 class="mb-0 text-info" id="processOrder"></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3">
                            <div class="card radius-15">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="mb-0 font-35">
                                            <i class='bx bx-task bx-tada text-success'></i>
                                        </div>
                                        <div>
                                            <p class="ms-auto mb-0 fs-5"> Đơn hàng hoàn thành</p>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <h3 class="mb-0 text-success" id="doneOrder"></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3">
                            <div class="card radius-15">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="mb-0 font-35">
                                            <i class='bx bx-task-x bx-tada text-danger'></i>
                                        </div>
                                        <div>
                                            <p class="ms-auto mb-0 fs-5"> Đơn hàng hủy</p>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <h3 class="mb-0 text-danger" id="cancelledOrder"></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end row-->
            <div class="card radius-15">
                <div class="card-header border-bottom-0">
                    <div class="d-lg-flex align-items-center">
                        <div>
                            <h5 class="mb-2 mb-lg-0">Doanh thu bán hàng</h5>
                        </div>
                        <div class="ms-lg-auto mb-2 mb-lg-0">
                            <div class="form-floating">
                                <select class="form-select" asp-items="@Model.YearList" id="Year">
                                </select>
                                <label>Năm</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div id="chart1"></div>
                </div>
            </div>
            <!--start row-->
           
                <div class="row">
                    <div class="col-12 col-lg-3">
                        <div class="card radius-15">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <p class="mb-0 fs-5">Tổng số khách hàng</p>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h5 class="mb-0 text-success fw-bold">@Model.TotalCustomer</h5>
                                    </div>
                                    <div class="mb-0 ms-auto font-35">
                                        <i class='bx bxs-user bx-tada text-primary'></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3">
                        <div class="card radius-15">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <p class="mb-0 fs-5">Tổng số đơn nhập</p>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h5 class="mb-0 text-success fw-bold">@Model.TotalPurchaseOrders</h5>
                                    </div>
                                    <div class="mb-0 ms-auto font-35">
                                        <i class='bx bx-download bx-tada text-info'></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3">
                        <div class="card radius-15">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <p class="mb-0 fs-5">Tổng số đơn xuất</p>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h5 class="mb-0 text-success fw-bold">@Model.TotalOrders</h5>
                                    </div>
                                    <div class="mb-0 ms-auto font-35">
                                        <i class='bx bxs-cart-add bx-tada text-info'></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                @if (User.IsInRole(SD.Role_Owner))
                {
                    <div class="col-12 col-lg-3">
                        <div class="card radius-15">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <p class="mb-0 fs-5">Tổng số nhân viên</p>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h5 class="mb-0 text-success fw-bold">@Model.TotalStaff</h5>
                                    </div>
                                    <div class="mb-0 ms-auto font-35">
                                        <i class='bx bxs-user-rectangle bx-tada text-primary'></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
           
            <!--end row-->
        </div>
    </div>
    <!--end page-content-wrapper-->
</div>
<!--end page-wrapper-->

@section Scripts {
    <script src="~/js/dashboard.js"></script>
    <script>
        defaultChartInYear(2023);
        defaultDailyReport('Hôm nay');
    </script>
}
}
