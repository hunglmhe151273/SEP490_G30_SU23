@model Customer
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--page-wrapper-->
<div class="page-wrapper">
    <!--page-content-wrapper-->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Khách hàng</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="javascript:;">
                                    <i class="bx bx-home-alt"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Quản lý khách hàng</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!--end breadcrumb-->
            <div class="mx-auto">
                <h3 class="mb-0 text-uppercase">Thêm khách hàng</h3>
                <hr>
                <div class="card border-top border-0 border-4 border-primary">
                    <div class="card-body p-5">
                        <div class="card-title d-flex align-items-center">
                            <div>
                                <i class="bx bxs-user me-1 font-22 text-primary"></i>
                            </div>
                            <h4 class="mb-0 text-primary">Thêm mới khách hàng</h4>
                        </div>
                        <hr>
                        <form class="row" asp-action="Edit" method="post" enctype="multipart/form-data">
                            <input asp-for="CustomerId" hidden>
                            <div class="col-7 mb-5 ">
                                <div class="row d-flex align-items-center ">
                                    <label asp-for="FullName" class="label-control col-3 pe-0 ">Họ và tên</label>
                                    <div class="col-7 ps-0 ">
                                        <input asp-for="FullName" class="form-control mb-0 " placeholder="Thêm họ và tên ">
                                        <span asp-validation-for="@Model.FullName" class="text-danger "></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-10 mb-5 ">
                                <div class="row d-flex align-items-center ">
                                    <label asp-for="DOB" class="label-control col-3 pe-0 "></label>
                                    <div class="col-7">
                                        <input asp-for="DOB" type="date" class="form-control mb-0 ">
                                        <span asp-validation-for="@Model.DOB" class="text-danger "></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-10 mb-5 ">
                                <div class="row d-flex align-items-center ">
                                    <label class="label-control col-3 ">Giới tính</label>
                                    <div class="col-7">
                                        <div class="form-check form-check-inline ms-3 ">
                                            <input asp-for="IsMale" class="form-check-input" type="radio" value="true">
                                            <label class="form-check-label " for="inlineRadio1">Nam</label>
                                        </div>
                                        <div class="form-check form-check-inline ms-3 ">
                                            <input asp-for="IsMale" class="form-check-input" type="radio" value="false">
                                            <label class="form-check-label" for="inlineRadio1">Nữ</label>
                                        </div>
                                        <span asp-validation-for="IsMale" class="text-danger "></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-10 mb-5 ">
                                <div class="row d-flex align-items-center ">
                                    <label asp-for="Phone" class="label-control col-3 pe-0 ">Số điện thoại</label>
                                    <div class="col-7 ">
                                        <input asp-for="Phone" class="form-control mb-0" placeholder="Thêm số điện thoại ">
                                        <span asp-validation-for="Phone" class="text-danger "></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-10 mb-5 ">
                                <div class="row d-flex align-items-center ">
                                    <label class="label-control col-3 ">Nhóm khách hàng</label>
                                    <div class="col-7">
                                        <div class="form-check form-check-inline ms-3 ">
                                            <input asp-for="IsWholesale" class="form-check-input" type="radio" value="true">
                                            <label class="form-check-label" for="inlineRadio1">Khách sỉ</label>
                                        </div>
                                        <div class="form-check form-check-inline ms-3 ">
                                            <input asp-for="IsWholesale" class="form-check-input" type="radio" value="false">
                                            <label class="form-check-label" for="inlineRadio1">Khách lẻ</label>
                                        </div>
                                        <span asp-validation-for="@Model.IsWholesale" class="text-danger "></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-10 mb-5 ">
                                <div class="row d-flex align-items-center ">
                                    <label class="label-control col-3 ">Trạng thái</label>
                                    <div class="col-7">
                                        <div class="form-check form-check-inline ms-3 ">
                                            <input asp-for="Status" class="form-check-input" type="radio" value="true">
                                            <label class="form-check-label" for="inlineRadio1">Hoạt động</label>
                                        </div>
                                        <div class="form-check form-check-inline ms-3 ">
                                            <input asp-for="Status" class="form-check-input" type="radio" value="false">
                                            <label class="form-check-label" for="inlineRadio1">Ngưng hoạt động</label>
                                        </div>
                                        <span asp-validation-for="@Model.Status" class="text-danger "></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-10 d-flex justify-content-center ">
                                <button type="submit" class="submit-btn-1 btn-hover-1 ">Lưu thay đổi</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end page-content-wrapper-->
</div>

<!--end page-wrapper-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript" src="~/js/editProfile.js"></script>
    <script src="~/js/address.js"></script>
}
