@model IEnumerable<VBookHaven.Models.Customer>
@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--page-wrapper-->
<div class="page-wrapper">
    <!--page-content-wrapper-->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Khách hàng</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="javascript:;">
                                    <i class="bx bx-home-alt"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Quản lý khách hàng</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!--end breadcrumb-->
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="mb-0">Danh sách khách hàng</h4>
                    </div>
                    <hr />
                    <div class="mb-3 row">
                        <div class="accordion col-8" id="accordionExample">
                        </div>
                        <div class="col-4">
                            <button type="button" class="btn btn-success">Nhập file</button>
                            <button type="button" class="btn btn-success">Xuất file</button>
                            <a asp-action="Create" class="btn btn-primary">+ Tạo mới khách hàng</a>
                        </div>
                        <div class="table-responsive mt-3">
                            <table id="example2" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Mã khách hàng</th>
                                        <th>Tên khách hàng</th>
                                        <th data-orderable="false">Số điện thoại</th>
                                        <th> Nhóm khách hàng</th>
                                        <th>Tổng SL đơn hàng</th>
                                        <th data-orderable="false">Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CustomerId</td>
                                            <td>@item.FullName</td>
                                            <td>@item.Phone</td>

                                            @if (@item.IsWholesale)
                                            {
                                                <td>
                                                    Khách sỉ
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    Khách lẻ
                                                </td>
                                            }

                                            <td>@item.Orders.Count()</td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-default">
                                                    <i class="lni lni-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end page-content-wrapper-->
    </div>
    <!--end page-wrapper-->
</div>
<!-- end wrapper -->
@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#example2').DataTable({});
            table.buttons().container().appendTo('#example2_wrapper .col-md-6:eq(0)');
        });
    </script>
}
