@model UpdateStaffVM
@{
    ViewData["Title"] = "Edit";
}
<!--page-wrapper-->
<div class="page-wrapper">
    <!--page-content-wrapper-->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Chủ cửa hàng</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="javascript:;">
                                    <i class="bx bx-home-alt"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Nhân viên</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!--end breadcrumb-->
            <div class="mx-auto">
                <h3 class="mb-0 text-uppercase">Cập nhật thông tin nhân viên</h3>
                <hr>
                <div class="card border-top border-0 border-4 border-primary">
                    <div class="card-body p-5">
                        <div class="card-title d-flex align-items-center">
                            <div>
                                <i class="bx bxs-user me-1 font-22 text-primary"></i>
                            </div>
                            <h4 class="mb-0 text-primary">Thông tin nhân viên</h4>
                        </div>
                        <hr>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form class="row" enctype="multipart/form-data" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-returnUrl="/admin/user/index" method="post">
                            <input asp-for="@Model.ApplicationUser.Id" hidden>
                            <div class="col-md-8 row g-3 mt-0">
                                <div class="col-md-8">
                                    <label asp-for="@Model.ApplicationUser.Staff.FullName" for="inputName" class="form-label"></label>
                                    <input asp-for="@Model.ApplicationUser.Staff.FullName" class="form-control" id="inputName" placeholder="Nhập tên">
                                    <span asp-validation-for="@Model.ApplicationUser.Staff.FullName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="@Model.ApplicationUser.Email" for="inputUserName" class="form-label">Email</label>
                                    <input asp-for="@Model.ApplicationUser.Email" disabled type="text" class="form-control" id="inputUserName" placeholder="Nhập tên đăng nhập">
                                    <span asp-validation-for="@Model.ApplicationUser.Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="@Model.ApplicationUser.Staff.Phone" for="inputPhone" class="form-label">Số điện thoại</label>
                                    <input asp-for="@Model.ApplicationUser.Staff.Phone" type="text" class="form-control" id="inputPhone" placeholder="Nhập số điện thoại">
                                    <span asp-validation-for="@Model.ApplicationUser.Staff.Phone" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="@Model.ApplicationUser.Staff.Dob" for="inputDob" class="form-label">Ngày sinh</label>
                                    <input asp-for="@Model.ApplicationUser.Staff.Dob" id="datefield" type="date" class="form-control" id="inputDob">
                                    <span asp-validation-for="@Model.ApplicationUser.Staff.Dob" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="@Model.ApplicationUser.Staff.IdCard" for="inputIdNumber" class="form-label">Số CCCD/CMND</label>
                                    <input asp-for="@Model.ApplicationUser.Staff.IdCard" class="form-control" id="inputFirstName" placeholder="Nhập số CCCD/CMND">
                                    <span asp-validation-for="@Model.ApplicationUser.Staff.IdCard" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="@Model.ApplicationUser.Staff.IsMale" for="inputCity" class="form-label">Giới tính</label>
                                    <div class="input-group mt-1">
                                        <div class="form-check-inline">
                                            <input asp-for="@Model.ApplicationUser.Staff.IsMale" value="true" class="form-check-input" type="radio">
                                            <label class="form-check-label" for="flexRadioDefault2">Nam</label>
                                        </div>
                                        <div class="form-check-inline">
                                            <input asp-for="@Model.ApplicationUser.Staff.IsMale" value="false" class="form-check-input" type="radio">
                                            <label class="form-check-label" for="flexRadioDefault2">Nữ</label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="@Model.ApplicationUser.Staff.IsMale" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="@Model.ApplicationUser.Staff.Address" class="form-label">Địa chỉ</label>
                                    <textarea asp-for="@Model.ApplicationUser.Staff.Address" class="form-control" placeholder="Nhập địa chỉ chi tiết"></textarea>
                                    <span asp-validation-for="@Model.ApplicationUser.Staff.Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 text-center mt-0">
                                <h3>Ảnh đại diện</h3>
                                <div class="avatar-wrapper">
                                    <img class="profile-pic" src="@Model.ApplicationUser.Staff.Image" />
                                    <div class="upload-button">
                                        <i class="bx bx-upload" aria-hidden="true"></i>
                                    </div>
                                    <input asp-for="@Model.Staff_ImageFile" class="file-upload" type="file" accept="image/*" />
                                </div>
                            </div>
                            <div class="col-12 mt-3">
                                <button type="button" onclick="goBack()" class="btn btn-danger px-5 py-2">Hủy</button>
                                <button type="submit" class="btn btn-success px-5 py-2">Lưu</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end page-content-wrapper-->
</div>
<!--end page-wrapper-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/user.js"></script>
}